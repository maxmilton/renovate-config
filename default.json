{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "security:openssf-scorecard",
    ":preserveSemverRanges",
    ":maintainLockFilesMonthly"
  ],
  "labels": ["bot"],
  "lockFileMaintenance": {
    "extends": ["group:all"],
    "enabled": true,
    "commitMessageAction": "Update"
  },
  "pin": {
    "addLabels": ["pin"]
  },
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "rangeStrategy": "auto",
  "rollback": {
    "addLabels": ["rollback"]
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "automerge": false,
    "schedule": ["at any time"],
    "addLabels": ["arg0", "security"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor", "patch", "bump", "digest", "lockFileMaintenance"],
      "addLabels": ["update"]
    },
    {
      "matchPackageNames": ["/ekscss/"],
      "groupName": "ekscss monorepo"
    }
  ]
}
