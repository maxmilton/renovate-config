{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":automergeRequireAllStatusChecks",
    ":automergeStableNonMajor",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes",
    ":combinePatchMinorReleases"
  ],
  "lockFileMaintenance": {
    "automerge": true
  },
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true
    }
  ]
}
